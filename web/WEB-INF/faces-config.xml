<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>hr</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>org.foi.nwtis.ztintor.i18n</base-name>
            <var>m</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/emailPostavke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>NOT_OK</from-outcome>
            <to-view-id>/emailPostavkeNeuspjesan.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/emailPostavke.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{emailPovezivanje.citajPoruke()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/odabirFoldera.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{emailPovezivanje.citajPoruke()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/odabirFolderaNeuspjesan.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{emailPovezivanje.saljiPoruku()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/odabirFoldera.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{odabirFoldera.saljiOdabir()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>    
    <navigation-rule>
        <from-view-id>/pregledSvihPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pregledPoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.prethodna()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.sljedeca()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>   
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/slanjePoruke.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{slanjePoruke.saljiPoruku()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
